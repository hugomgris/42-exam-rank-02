void	sort_in_tab(int *tab, unsigned int size)
{
	int	i;
	int	aux;
	
	i = 0;
	while (i < size)
	{
		if(tab[i] < tab[i + 1])
		{
			aux = tab[i];
			tab[i] = tab[i + 1];
			tab[i + 1] = aux;
			i = 0;
		}
		i++;
	}	
}

#include <stdio.h>
int	main(void)
{
	int	*tab = {3, 2, 1, 0};
	sort_int_tab(tab);
	int i = 0;
	while (tab[i])
	{
		printf("%d", tab[i]);
		i++;
	}
}
